# Dockerfile for Sherlock Web Interface
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY pyproject.toml ./

# Install Poetry and dependencies
RUN pip install --no-cache-dir poetry && \
    poetry config virtualenvs.create false && \
    poetry install --only main --no-root --no-interaction --no-ansi

# Install Flask for web interface
RUN pip install --no-cache-dir flask psycopg2-binary redis

# Copy application code
COPY . .

# Create results directory
RUN mkdir -p /app/web_interface/results

# Expose port
EXPOSE 5000

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV FLASK_APP=web_interface/app.py

# Run the web application
CMD ["python", "web_interface/app.py"]
