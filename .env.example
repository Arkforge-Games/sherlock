# Sherlock Docker Environment Configuration
# Copy this file to .env and update the values as needed

# PostgreSQL Database Configuration
POSTGRES_USER=tony
POSTGRES_PASSWORD=hrpassword123
POSTGRES_DB=sherlock_db
POSTGRES_HOST=sherlock_postgres
POSTGRES_PORT=5432

# External PostgreSQL Port (to avoid conflicts with other services)
POSTGRES_EXTERNAL_PORT=5433

# Redis Configuration
REDIS_PASSWORD=hrpassword123
REDIS_HOST=sherlock_redis
REDIS_PORT=6379

# External Redis Port (to avoid conflicts with other services)
REDIS_EXTERNAL_PORT=6380

# Flask Web Interface Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_PORT=5000

# External Web Interface Port
WEB_EXTERNAL_PORT=5050

# Database URLs (for application use)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Docker Network
NETWORK_NAME=sherlock_network

# Container Names
POSTGRES_CONTAINER=sherlock_postgres
REDIS_CONTAINER=sherlock_redis
WEB_CONTAINER=sherlock_web

# Volume Names
POSTGRES_VOLUME=sherlock_postgres_data
REDIS_VOLUME=sherlock_redis_data
RESULTS_VOLUME=sherlock_results
